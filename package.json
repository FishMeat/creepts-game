{
    "name": "anuto",
    "version": "0.0.1",
    "description": "Tower defense game for Cartesi.io based on Anuto",
    "devDependencies": {
        "@beam-australia/react-env": "^2.1.2",
        "@types/hookrouter": "^2.2.1",
        "@types/jest": "^24.0.18",
        "@types/node": "^12.7.4",
        "@types/react": "^16.9.2",
        "@types/react-dom": "^16.9.0",
        "@types/semantic-ui": "^2.2.7",
        "clean-webpack-plugin": "^3.0.0",
        "copy-webpack-plugin": "^5.0.4",
        "expose-loader": "0.7.5",
        "html-webpack-plugin": "^3.2.0",
        "ts-loader": "6.0.4",
        "typescript": "3.6.2",
        "webpack": "4.35.3",
        "webpack-bundle-analyzer": "^3.5.2",
        "webpack-bundle-tracker": "^0.4.3",
        "webpack-cli": "3.3.5",
        "webpack-dev-server": "3.7.2",
        "webpack-merge": "^4.2.2"
    },
    "dependencies": {
        "@types/howler": "^2.1.1",
        "hookrouter": "^1.2.3",
        "howler": "^2.1.2",
        "moment": "^2.24.0",
        "phaser": "3.19.0",
        "query-string": "^6.8.3",
        "react": "^16.9.0",
        "react-dom": "^16.9.0",
        "semantic-ui-css": "^2.4.1",
        "semantic-ui-react": "^0.88.1",
        "typed-emitter": "^0.1.0"
    },
    "scripts": {
        "dev": "react-env --env .env --dest ./dist && webpack --env.GAME_ONLY=true --mode development && webpack-dev-server --env.GAME_ONLY=true --mode development",
        "dev:cartesi": "react-env --env .env --dest ./dist && webpack --mode development && webpack-dev-server --mode development",
        "build": "react-env --env .env --dest ./dist && webpack --mode production",
        "build:app": "react-env --env .env --dest ./dist && webpack --config-name app --mode production",
        "build:verifier": "webpack --config-name verifier --mode production",
        "verifier": "webpack --config-name verifier --mode production && verifier/djs dist/verifier-bundle.js"
    }
}
